<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <link rel="stylesheet" href="/stylesheet/style.css">
  <script src="https://cdn.jsdelivr.net/npm/@tailwindcss/browser@4"></script>
  <title>Task Manager</title>
</head>
<body>
  <div class="main w-full min-h-screen bg-zinc-900">
    <div class="form px-10 py-10 text-white">
      <form action="/create" method= "post">
        <input class= "block w-full rounded-md outline-none px-5 py-2 bg-zinc-800" type="text" placeholder="Title" name="title">
        <textarea class="block px-5 w-full mt-2 outline-none rounded-md py-2 bg-zinc-800 resize-none" placeholder="Taskdetails" name="details"></textarea>
        <input class= "block bg-blue-500 px-5 py-2 rounded-md cursor-pointer mt-2" type="submit" value="Add Task">
      </form>
    </div>
    <div class="tasks p-10 flex mx-auto w-fit gap-5 flex-wrap">
      <% if (files.length > 0) { %>
        <% files.forEach(function(val) { %>
          <div class="task min-w-72 max p-10 bg-zinc-800 px-3 py-4 rounded-md">
            <h1 class="text-white text-3xl tracking-tighter"> <%= val %> </h1>
            <div class="flex mt-3 justify-between">
              <a class= "text-indigo-500 inline-block" href="/file/<%= val %> ">Read..</a>
              <a class= "text-rose-500 " href= '/edit/<%= val %>'>Rename</a>
            </div>
          </div>
        <% }) %>
      <% } else { %>
        <h3 class="zinc-1000 ">No tasks yet</h3>
      <% } %>
    </div>

  </div>
  <script src=" /javascript/script.js" ></script>
</body>
</html>